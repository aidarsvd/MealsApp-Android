<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationView.InActiveText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>

    <style name="BottomNavigationView.ActiveText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="Black_14_Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Black_18_Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Black_14_Regular">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>